<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_9sdp">

    <TextView
        android:id="@+id/purchased_pName"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:text="Product name"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_remove_purchased_item"
        app:layout_constraintBottom_toBottomOf="@id/btn_remove_purchased_item" />

    <TextView
        android:id="@+id/purchased_pAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/purchased_pQty"
        app:layout_constraintTop_toTopOf="@id/btn_remove_purchased_item"
        app:layout_constraintBottom_toBottomOf="@id/btn_remove_purchased_item" />

    <TextView
        android:id="@+id/purchased_pQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10"
        app:layout_constraintEnd_toStartOf="@id/purchased_pPrice"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="@id/btn_remove_purchased_item"
        app:layout_constraintBottom_toBottomOf="@id/btn_remove_purchased_item"/>

    <TextView
        android:id="@+id/purchased_pPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        app:layout_constraintEnd_toStartOf="@id/btn_remove_purchased_item"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="@id/btn_remove_purchased_item"
        app:layout_constraintBottom_toBottomOf="@id/btn_remove_purchased_item" />

    <ImageButton
        android:id="@+id/btn_remove_purchased_item"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/baseline_delete_24"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>