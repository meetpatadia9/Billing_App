<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/purchased_pName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Femicare"
        android:textStyle="italic"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/purchased_pQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:layout_toLeftOf="@id/purchased_pPrice"
        android:layout_marginRight="30dp"
        android:textStyle="italic"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/purchased_pPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:layout_toLeftOf="@id/btn_remove_purchased_item"
        android:layout_marginRight="10dp"
        android:textStyle="italic"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/btn_remove_purchased_item"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/baseline_delete_24"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/white"/>

</RelativeLayout>