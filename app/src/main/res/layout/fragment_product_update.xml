<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    NAME    -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til1"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/light_color1"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
            app:boxCornerRadiusBottomStart="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_3sdp"
            app:boxCornerRadiusTopStart="@dimen/_3sdp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/update_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:padding="@dimen/_9sdp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--    PURCHASE PRICE    -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til2"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            app:boxBackgroundColor="@color/light_color1"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
            app:boxCornerRadiusBottomStart="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_3sdp"
            app:boxCornerRadiusTopStart="@dimen/_3sdp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:helperTextTextColor="@color/color4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til1">

            <EditText
                android:id="@+id/update_purchasePrise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Purchasing Price"
                android:padding="@dimen/_9sdp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--    SELLING PRICE    -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til3"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            app:boxBackgroundColor="@color/light_color1"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
            app:boxCornerRadiusBottomStart="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_3sdp"
            app:boxCornerRadiusTopStart="@dimen/_3sdp"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:helperTextTextColor="@color/color4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til2">

            <EditText
                android:id="@+id/update_sellingPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selling Price"
                android:padding="@dimen/_9sdp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--    QUANTITY    -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til4"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            app:boxBackgroundColor="@color/light_color1"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
            app:boxCornerRadiusBottomStart="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_3sdp"
            app:boxCornerRadiusTopStart="@dimen/_3sdp"
            app:helperTextTextColor="@color/color4"
            app:boxStrokeColor="@color/color2"
            app:boxStrokeWidth="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til3">

            <EditText
                android:id="@+id/update_productQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Quantity"
                android:padding="@dimen/_9sdp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--    UPDATE BUTTON    -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdateItem"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/shape_btn_green"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/color5"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintStart_toStartOf="@id/til4"
            app:layout_constraintTop_toBottomOf="@id/til4"/>

        <!--    DELETE BUTTON    -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteItem"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/shape_btn_red"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/color4"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="@id/til4"
            app:layout_constraintTop_toBottomOf="@id/til4"/>

        <!--    CANCEL BUTTON    -->
        <!--<androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_cancel"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="Cancel"
            android:background="@drawable/shape_btn"
            android:textAllCaps="false"
            android:textColor="@color/color2"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnDeleteItem" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>