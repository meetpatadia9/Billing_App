<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp">

    <!--    NAME    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til1"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        app:boxBackgroundColor="@color/light_color1"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
        app:boxCornerRadiusBottomStart="@dimen/_3sdp"
        app:boxCornerRadiusTopEnd="@dimen/_3sdp"
        app:boxCornerRadiusTopStart="@dimen/_3sdp"
        app:boxStrokeColor="@color/color2"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:helperTextTextColor="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/addItem_edtxt_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_product_name"
            android:inputType="textCapSentences"
            android:padding="@dimen/_9sdp"
            android:singleLine="true"
            tools:ignore="Autofill" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til2"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        app:boxBackgroundColor="@color/light_color1"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
        app:boxCornerRadiusBottomStart="@dimen/_3sdp"
        app:boxCornerRadiusTopEnd="@dimen/_3sdp"
        app:boxCornerRadiusTopStart="@dimen/_3sdp"
        app:boxStrokeColor="@color/color2"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:helperTextTextColor="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til1">

        <EditText
            android:id="@+id/addItem_edtxt_purchasePrise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_purchasing_price"
            android:inputType="number|textCapSentences"
            android:padding="@dimen/_9sdp"
            android:singleLine="true"
            tools:ignore="Autofill" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--    SELLING PRICE    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til3"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        app:boxBackgroundColor="@color/light_color1"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
        app:boxCornerRadiusBottomStart="@dimen/_3sdp"
        app:boxCornerRadiusTopEnd="@dimen/_3sdp"
        app:boxCornerRadiusTopStart="@dimen/_3sdp"
        app:boxStrokeColor="@color/color2"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:helperTextTextColor="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til2">

        <EditText
            android:id="@+id/addItem_edtxt_sellingPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_selling_price"
            android:inputType="number|textCapSentences"
            android:padding="@dimen/_9sdp"
            android:singleLine="true"
            tools:ignore="Autofill" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--    QUANTITY    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til4"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        app:boxBackgroundColor="@color/light_color1"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="@dimen/_3sdp"
        app:boxCornerRadiusBottomStart="@dimen/_3sdp"
        app:boxCornerRadiusTopEnd="@dimen/_3sdp"
        app:boxCornerRadiusTopStart="@dimen/_3sdp"
        app:boxStrokeColor="@color/color2"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:helperTextTextColor="@color/color4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til3">

        <EditText
            android:id="@+id/addItem_edtxt_productQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_product_quantity"
            android:inputType="number"
            android:padding="@dimen/_9sdp"
            android:singleLine="true"
            tools:ignore="Autofill" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveItem"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:background="@drawable/shape_btn_green"
        android:text="@string/btn_save"
        android:textAllCaps="false"
        android:textColor="@color/color5"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="@id/til4"
        app:layout_constraintTop_toBottomOf="@id/til4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_additem_cancel"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:background="@drawable/shape_btn_red"
        android:text="@string/btn_cancel"
        android:textAllCaps="false"
        android:textColor="@color/color4"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="@id/til4"
        app:layout_constraintTop_toBottomOf="@id/til4" />

</androidx.constraintlayout.widget.ConstraintLayout>