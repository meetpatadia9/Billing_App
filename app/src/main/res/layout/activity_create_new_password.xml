<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateNewPasswordActivity"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:id="@+id/layout_createNewPassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new password:"/>

    <EditText
        android:id="@+id/cpf_edtxt_newPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Re-enter new password:"/>

    <EditText
        android:id="@+id/cpf_edtxt_conformPass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCreateNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:textSize="16sp"
        android:background="@drawable/shape_btn"/>

</LinearLayout>